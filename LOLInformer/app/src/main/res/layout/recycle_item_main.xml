<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dimen_4"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_item_main"
        android:paddingBottom="@dimen/dimen_10"
        android:paddingLeft="@dimen/dimen_10"
        android:paddingRight="@dimen/dimen_10"
        android:paddingTop="@dimen/dimen_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--HEADER-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageview_champion"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="@dimen/dimen_50"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.5" />

                <View
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2" />

                <com.artlite.collapsinglayouttest.ui.views.fonted.FTextView
                    android:id="@+id/textview_main"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:gravity="left|center_vertical"
                    android:text="Item 1"
                    android:textAllCaps="true"
                    android:textColor="@color/color_text_selected"
                    android:textSize="@dimen/text14"
                    android:textStyle="bold" />

                <View
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2" />

                <ImageView
                    android:id="@+id/imageview_type"
                    style="@style/styleCropImageCenter"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="@dimen/dimen_30"
                    android:layout_gravity="right|center_vertical"
                    android:layout_weight="1" />
            </LinearLayout>
            <!--DESCRIPTION-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--<View-->
                <!--android:layout_width="@dimen/dimen_0"-->
                <!--android:layout_height="@dimen/dimen_50"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:layout_weight="1.7" />-->

                <com.artlite.collapsinglayouttest.ui.views.fonted.FTextView
                    android:id="@+id/textview_history"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="5.2"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical|fill"
                    android:text="Item 1"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_13" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</FrameLayout>